{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "secret-schema.json",
    "description": "はてなAPI認証用スキーマです。",
    "type": "object",
    "required": [
        "username",
        "api_key"
    ],
    "properties" :{
        "username": {
            "type": "string"
        },
        "api_key": {
            "type": "string"
        },
        "password": {
            "type": "string"
        },
        "oauth_consumer_key": {
            "type": "string"
        },
        "oauth_consumer_secret": {
            "type": "string"
        },
        "oauth_token": {
            "type": "string"
        },
        "oauth_token_secret": {
            "type": "string"
        }
    }
}

